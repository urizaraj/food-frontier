= form_for restaurant do |f|
  .form-group
    = f.text_field :name, class: 'form-control', placeholder: 'Name'
  .form-group
    = f.text_field :description, class: 'form-control', placeholder: 'Description'
  .form-group
    = f.text_field :category, class: 'form-control', placeholder: 'Category'

  .row
    = f.collection_check_boxes :item_ids, Item.all, :id, :name do |b|
      .col-auto
        = b.label do
          = b.check_box class: 'mr-2'
          = b.text

  .form-group
    = f.submit class: 'btn btn-dark'