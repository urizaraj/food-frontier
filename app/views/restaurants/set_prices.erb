<h1>Set Prices for <%= @restaurant.name %>
</h1>

<%= errors @restaurant %>

<%= form_for @restaurant do |f| %>
  <%= f.fields_for :menu_items, @menu_items do |m| %>
    <div class="form-group row">
      <div class="col-2 col-form-label"><%= m.object.name %>
      </div>
      <div class="col-4"><%= m.number_field :price, class: 'form-control' %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
