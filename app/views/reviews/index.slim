h1.display-4
  => link_to @parent.name, @parent
  | - Reviews

- @reviews.each do |r|
  .card.mb-2
    .card-body
      .row.card-title
        .col-auto.text-warning = render_stars r.rating
        .col-auto = link_to r.restaurant.name, r.restaurant
        .col-auto = link_to r.user.name, r.user

      h5 = r.title
      p.card-text = r.content